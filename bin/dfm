#!/bin/sh

## Ignored files
IGNORED=".git .gitignore README.md"

## Determine paths
SELF=`basename $0`
BIN=`dirname $0`
REALBIN=`cd $BIN; pwd -P`
DOTFILES=`cd $REALBIN/..; pwd -P`

## Print usage and exit
usage() {
    echo "Usage: $SELF [--verbose|-v] [--install|-i] [--dry-run]"
    exit 1
}

## Create symlinks for dotfiles and dirs
create_symlinks() {
    for entry in `ls -A $DOTFILES`; do
	if echo $IGNORED | tr ' ' '\n' | fgrep -wq $entry; then
	    continue
	fi

	src="$DOTFILES/$entry"
	tgt="$HOME/$entry"

	if [ -e $tgt ]; then
	    if [ `readlink $tgt` = "$src" ]; then
		if [ -n $VERBOSE ]; then
		    echo "$tgt already installed, skipping..."
		fi
	    else
		echo "$tgt already exists, skipping..."
	    fi

	    continue
	fi

	if [ -n $DRYRUN ]; then
	    echo "ln -sv $src $tgt"
	else
	    ln -sv $src $tgt
	fi
    done
}

## Parse parameters
for param in $*; do
    case $param in
	--dry-run)
	    DRYRUN=yes
	    ;;
	--install|-i)
	    INSTALL=yes
	    ;;
	--verbose|-v)
	    VERBOSE=yes
	    ;;
	*)
	    usage
	    ;;
    esac
done

## Execute
if [ -n "$INSTALL" ]; then
    if [ -n $VERBOSE ]; then
	echo "==> Installing dotfiles from '$DOTFILES'"
    fi
    create_symlinks
else
    usage
fi
